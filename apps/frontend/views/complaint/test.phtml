<fieldset id="certificate-list">
    <legend>Sign message:</legend>
    <div name="certificate-select" class="box" style="width: 25%">
        <label for="certificate-select">List sertif:</label>
        <select id="certificate-select" style="width: 100%" size="10"></select>
        <button id="sign-message" onclick="signMessage('certificate-select', 'certificate-message', 'certificate-signature');">Sign</button>
    </div>
    <div name="content" class="box" style="width: 25%">
        <label for="certificate-message">Sign data</label>
        <textarea id="certificate-message" style="width: 100%; min-height: 200px;">Hello World</textarea>
    </div>
    <div name="signature" class="box" style="width: 40%">
        <label for="certificate-signature">sign in base64</label>
