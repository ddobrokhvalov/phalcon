    </div>
</fieldset>
<fieldset id="sign-file">
    <legend>Sign file:</legend>
    <div name="certificate-select-file" class="box" style="width: 25%">
        <label for="certificate-select-file">List sertif:</label>
        <select id="certificate-select-file" style="width: 100%" size="10"></select>
        <label for="file">Select file:</label>
        <input type="file" onchange="onLoad(event, 'certificate-select-file', 'file-content', 'file-signature')" id="file">
    </div>
    <div name="signature" class="box" style="width: 70%">
        <label for="file-signature">Sign in base64</label>
        <textarea id="file-signature" style="width: 100%; min-height: 200px;"></textarea>
        <input type="hidden" id="file-content"/>
    </div>
</fieldset>
