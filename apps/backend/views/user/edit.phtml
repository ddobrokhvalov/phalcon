{% extends "base-template.phtml" %}
{% block title %}ФАС ОНЛАЙН - РЕДАКТИРОВАТЬ ПОЛЬЗОВАТЕЛЯ{% endblock %}
{% block body %}

<!-- ****************** user page ***************** -->
<div class="admin-main-wrap user-page">
    <div class="bread-crumbs-holder">
        <a href="#">Вернуться к списку пользователей</a>
    </div>
    <h1>{{edituser.email}}</h1>
    <div class="admin-change-access">
        <span>Тариф пробный до 12.02.2016</span>
        <div class="change-access">Изменить тариф</div>
    </div>
    <div class="block-user-editing">
        <form action="#" method="POST">
            <div class="left-block-editing">
                <span>Данные пользователя</span>
                <label for="fioUser">
                    <p>ФИО</p>
                    <input type="text" id="fioUser" value="{{edituser.firstname}} {{edituser.patronymic}} {{edituser.lastname}}">
                </label>
                <label for="telFaxUser">
                    <p>Контактный факс, телефон</p>
                    <input type="number" id="telFaxUser" value="{{edituser.phone}}">
                </label>
                <label for="userEmail">
                    <p>E-mail</p>
                    <input type="email" id="userEmail" value="{{edituser.email}}">
                </label>
            </div>
            <div class="right-block-editing">
                <span>Сменить пароль</span>
                <label for="userPass">
                    <p>Задайте новый пароль</p>
                    <input type="password" id="userPass" value="">
                </label>
                <label for="sendEmailNotice" class="lebel-checkbox">
                    <input type="checkbox" id="sendEmailNotice" value="{{edituser.emailNotice}}">
                    <p>Отправлять уведомления на e-mail</p>
                </label>
                <label for="userComment">
                    <p>Комментарий админа (только для админа!)</p>
                    <textarea id="" cols="30" rows="10" id="userComment" value="{{edituser.userComment}}"></textarea>
                </label>
            </div>
            <div class="delete-or-save">
                <button>Удалить пользователя</button><!--todo-->
                <button>Сохранить изменения</button><!--todo-->
            </div>
        </form>
    </div>
    <div class="user-top-lt">
        <span>Заявители пользователя {{edituser.email}}</span>
        <div>Создать заявителя</div>
    </div>
    <div class="admin-lt-head">
        <div class="select-all">
            <div></div>Выбрать все
        </div>
        <div class="lt-head-btns">
            <div>Изменить</div>
            <div>Заблокировать</div>
            <div>Удалить</div>
        </div>
    </div>
    <div class="admin-lt-content userPageLtContent">
        <ul class="lt-content-top">
            <li><span>Наименование</span></li>
            <li><span>тип</span></li>
            <li><span>инн</span></li>
            <li><span>фио</span></li>
            <li><span>Контактные данные</span></li>
            <li><span>Жалобы</span></li>
        </ul>
        {% for applicant in applicants %}
        <ul class="lt-content-main">
            <li>
                <div class="lt-psevdo-check"></div>
                {{applicant.name_full}}
            </li>
            <li>
                {% if applicant.type == 'urlico' %}
                    юр
                {% elseif applicant.type == 'fiz' %}
                    физ
                {% else %}
                    ип
                {% endif %}
            </li>
            <li>{{applicant.inn}}</li>
            <li>{{applicant.fio_applicant}}</li>
            <li>{{applicant.address}}</li>
            <li>1???</li>
        </ul>
        {% endfor %}
    </div>
    <div class="appllicant-page">
        <div class="user-top-lt">
            <span>Жалобы пользователя {{edituser.email}}</span>
        </div>
        <div class="admin-lt-holder">
            <div class="admin-lt-head">
                <div class="select-all">
                    <div></div>Выбрать все
                </div>
                <div class="lt-head-btns">
                    <div>Копировать</div>
                    <div>Создать</div>
                    <div>В архив</div>
                    <div>Удалить</div>
                </div>
            </div>
            <div class="admin-lt-content">
                <ul class="lt-content-top">
                    <li><span>Имя жалобы</span></li>
                    <li><span>Номер закупки</span></li>
                    <li><span>Заявитель</span></li>
                    <li><span>Дата подачи</span></li>
                    <li><span>Статус</span></li>
                </ul>
                {% for comliant in complaints %}
                <ul class="lt-content-main {%if comliant['status'] =='submitted' %}top-bd-blue{%elseif comliant['status'] in ['recalled','arhive', 'draft', 'unfounded']%}top-bd-green{%else%}{%endif%}">
                    <li>
                        <div class="lt-psevdo-check"></div>
                        {{comliant['complaint_name']}}
                    </li>
                    <li>{{comliant['auction_id']}}</li>
                    <li>{{comliant['apname']}}</li>
                    <li>{{date('d.m.Y' ,comliant['date']|strtotime)}}</li>
                    <li>
                        <div class="appll-status-icon">
                        </div>
                        <div class="close-status-list">Сменить статус</div>
                    </li>
                </ul>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<form action="/admin/user/save" method="post">
    <fieldset>

        <fieldset>

            {% for element in form %}
            <div class="control-group">
                {{ element.label(['class': 'control-label']) }}
                <div class="controls">{{ element }}</div>
            </div>
            {% endfor %}

            <div class="control-group">
                {{ submit_button("Сохранить", "class": "btn btn-primary") }}
            </div>

        </fieldset>
</form>

<div>
    {% for applicant in applicants %}
      {{ applicant.name_full }}
    <a href="/admin/user/editapplicant/{{ applicant.id }}">Редактировать</a>
    <a href="/admin/user/delapplicant/{{ applicant.id }}">Удалить</a>

    {% endfor %}

</div>


<script>
    $( document ).ready(function() {
        $( "#password" ).val('');
    });
</script>
{% endblock %}