{% extends "base-template.phtml" %}
{% block title %}ФАС ОНЛАЙН - Доводы{% endblock %}
{% block body %}

<script type="application/javascript" src="/js/ckeditor/ckeditor.js"></script>
<script type="application/javascript" src="/js/category_add.js"></script>
<script type="application/javascript" src="/js/jquery.mCustomScrollbar.concat.min.js"></script>
<div class="admin-main-wrap listArguments">
    <h1>Категория</h1>
    <div class="admin-add add-cat">Добавить</div>
</div>
<ul class="argCatTree">
    {% for cat in ArgumentsCategory %}
    <li class="catArguments">
        <div class="category" id="category" data-value="0" data-id="{{ cat.id }}" data-parent_id="{{ cat.parent_id }}" data-required="{{ cat.required }}" data-toggle="true">
            <div class="category_arrow"></div>
            <h2 class="itemTitle">{{ cat.name }}</h2>
            <div class="category_add">Добавить категорию</div>
            <div class="category_edit"></div>
            <div class="category_delete"></div>
        </div>
    </li>
    {% endfor %}
</ul>

<article class="admin-popup-wrap add-Arguments_category">
    <div class="admin-popup-bg"></div>
    <div class="admin-popup-content">
        <div class="admin-popup-close"></div>
        <h6></h6>
        <section class="add-ArgumentsCategory" data-obj="">
            <div class="inputBox">
                <h4></h4>
                <input type="text">
            </div>
            <div class="inputBox argumentText">
                <h4>Текст довода</h4>
                <div style="width: 110px;" id="itselem"></div>
                <textarea id="argument-text"></textarea>
            </div>
            <div class="requiredOrNot" data-value="0">
                <input type="radio" name="requiredOrNot" class="reqRadio" id="requiredOrNot_item1">
                <label for="requiredOrNot_item1" data-required="0">Не обязательная категория</label>
                <input type="radio" name="requiredOrNot" class="reqRadio" id="requiredOrNot_item2">
                <label for="requiredOrNot_item2" data-required="1">Обязательная категория</label>
            </div>
        </section>
        <section class="add-ArgumentsType">
            <div id="selectArgType" class="select-holder">
                <div class="title-info-box">Выберите тип довода</div>
                <div class="custom_select selectArgType">
                    <div class="current-option" data-value="">
                        <span>Тип довода</span>
                        <div></div>
                    </div>
                    <ul class="custom-options">
                        <li class="selectArgType_item" data-value="electr_auction">Электронный аукцион</li>
                        <li class="selectArgType_item" data-value="concurs">Конкурс</li>
                        <li class="selectArgType_item" data-value="kotirovok">Запрос котировок</li>
                        <li class="selectArgType_item" data-value="offer">Запрос предложений</li>
                    </ul>
                </div>
                <div class="inputBox argumentsComment">
                    <h4>Комментарий к доводу</h4>
                    <textarea></textarea>
                </div>
            </div>
            <label for="addArgComments" class="addArgComment">Добавить комментарий</label>
            <input type="checkbox" id="addArgComments">
        </section>
        <div class="popupBtn cancel">Отмена</div>
        <div class="popupBtn saveCat">Сохранить</div>
    </div>
</article>

<article class="admin-popup-wrap deleteChoosenItem">
    <div class="admin-popup-bg"></div>
    <div class="admin-popup-content delChoosenCatArg">
        <div class="admin-popup-close"></div>
        <h6>Внимание!</h6>
        <p class="delChoosenCatArg__name"></p>
        <p class="delChoosenCatArg__catNames"></p>
        <p class="delChoosenCatArg__argNumber"></p>
        <div class="popupBtn cancelDel">Отмена</div>
        <div class="popupBtn delChoosen">Подтвердить</div>
    </div>
</article>

<article class="admin-popup-wrap warningMessageNew">
    <div class="admin-popup-bg"></div>
    <div class="admin-popup-content">
        <div class="admin-popup-close"></div>
        <h6>Внимание!</h6>
        <p></p>
        <div class="popupBtn">Ок</div>
    </div>
</article>

