<header id="admin-header">
    <div class="admin-name">
        <div><img src="/files/avatars/{{user.avatar}}" alt="avatar admin"></div>
        <span>{{user.email}}</span>
    </div>
    <div class="admin-settings-logout">
        <div class="admin-settings"></div>
        <a href="/admin/login/logout" id="admin-logout"></a>
    </div>
    <article class="admin-settings-modal">
        <div class="admin-set-bg"></div>
        <div class="admin-set-top">
            <p>Настройки администратора</p>
        </div>
        <div class="admin-set-cont">
            <form action="#" method="POST">
                <p>Личные данные</p>
                <label for="download-avatar">
                    <img src="/files/avatars/{{user.avatar}}" alt="">
                    <p>Изменить аватар</p>
                    <input type="file" id="download-avatar">
                </label>
                <label for="adm-set-email" class="set-same-lable">
                    <span>E-mail</span>
                    <input type="email" id="adm-set-email" value="{{user.email}}">
                </label>
                <label for="adm-set-fio" class="set-same-lable">
                    <span>ФИО</span>
                    <input type="text" id="adm-set-fio" value="{{user.surname}} {{user.name}}">
                </label>
                <p>Сменить пароль</p>
                <label for="set-oldPas" class="set-same-lable">
                    <span>Старый пароль</span>
                    <input type="password" id="set-oldPass">
                </label>
                <label for="set-newPass" class="set-same-lable">
                    <span>Новый пароль</span>
                    <input type="password" id="set-newPass">
                </label>
                <label for="set-newPass-agane" class="set-same-lable">
                    <span>Новый пароль еще раз</span>
                    <input type="password" id="set-newPass-agane">
                </label>
                <button>Сохранить</button>
            </form>
        </div>
    </article>
</header>